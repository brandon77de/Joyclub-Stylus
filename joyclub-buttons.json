@-moz-document domain("joyclub.de"), domain("www.joyclub.de") {
/* Joyclub — custom button colors (stable attribute selectors) */



  /* 1) ANGMELDET → dark green (icon or plain) */
  j-button[variant="secondary"][href*="#tr_event_anmeldung_information"],
  j-button.link_to_tab[variant="secondary"][href="#tr_event_anmeldung_information"] {
    background-color: #0f6d2f !important;
    color: #fff !important;
    border-color: #0d5e28 !important;
    border-radius: 8px !important;
  }
  j-button[variant="secondary"][href*="#tr_event_anmeldung_information"] *,
  j-button.link_to_tab[variant="secondary"][href="#tr_event_anmeldung_information"] * {
    color: #fff !important;
    fill: currentColor !important;
  }

  /* 2) AUF DER WARTELISTE → orange (icon or plain) */
  j-button[variant="secondary"][href*="#jetzt_anmelden"],
  j-button.link_to_tab[variant="secondary"][href="#jetzt_anmelden"] {
    background-color: #d97706 !important;
    color: #fff !important;
    border-color: #b45309 !important;
    border-radius: 8px !important;
  }
  j-button[variant="secondary"][href*="#jetzt_anmelden"] *,
  j-button.link_to_tab[variant="secondary"][href="#jetzt_anmelden"] * {
    color: #fff !important;
    fill: currentColor !important;
  }

  /* 3) EVENT GEMERKT (UN-bookmark) → 4px green inner border
        Only when title is exactly "Veranstaltung nicht mehr merken." */
  j-button[variant="secondary"][title="Veranstaltung nicht mehr merken."],
  j-button.js_submit_bookmark_form[variant="secondary"][title="Veranstaltung nicht mehr merken."] {
    position: relative !important;
    border-radius: 8px !important;
  }
  j-button[variant="secondary"][title="Veranstaltung nicht mehr merken."]::after,
  j-button.js_submit_bookmark_form[variant="secondary"][title="Veranstaltung nicht mehr merken."]::after {
    content: "" !important;
    position: absolute !important;
    inset: 0 !important;
    border: 4px solid #0f6d2f !important;  /* green ring */
    border-radius: 8px !important;
    pointer-events: none !important;
    box-sizing: border-box !important;      /* ring sits inside, no growth */
  }

  /* 3b) SAFETY RESET — any bookmark button NOT in unbookmark state
         (prevents ring on "Event merken" and similar) */
  j-button.js_submit_bookmark_form[variant="secondary"]:not([title="Veranstaltung nicht mehr merken."]),
  j-button[variant="secondary"][title="Setze diese Veranstaltung auf deine Merkliste."],
  j-button[variant="secondary"][title="Veranstaltung auf die Merkliste setzen."],
  j-button[variant="secondary"][title="Event merken"] {
    border: none !important;
    box-shadow: none !important;
  }
  j-button.js_submit_bookmark_form[variant="secondary"]:not([title="Veranstaltung nicht mehr merken."])::before,
  j-button.js_submit_bookmark_form[variant="secondary"]:not([title="Veranstaltung nicht mehr merken."])::after,
  j-button[variant="secondary"][title="Setze diese Veranstaltung auf deine Merkliste."]::before,
  j-button[variant="secondary"][title="Setze diese Veranstaltung auf deine Merkliste."]::after,
  j-button[variant="secondary"][title="Veranstaltung auf die Merkliste setzen."]::before,
  j-button[variant="secondary"][title="Veranstaltung auf die Merkliste setzen."]::after,
  j-button[variant="secondary"][title="Event merken"]::before,
  j-button[variant="secondary"][title="Event merken"]::after {
    content: none !important;
    border: 0 !important;
    box-shadow: none !important;
  }

  /* ❌ Extra safety: native <button> (not <j-button>) should never get a ring */
  button.j-button,
  button.j-button::before,
  button.j-button::after {
    border: 0 !important;
    box-shadow: none !important;
    content: none !important;
  }

  /* Hover polish for green/orange backgrounds */
  j-button[variant="secondary"][href*="#tr_event_anmeldung_information"]:hover,
  j-button.link_to_tab[variant="secondary"][href="#tr_event_anmeldung_information"]:hover,
  j-button[variant="secondary"][href*="#jetzt_anmelden"]:hover,
  j-button.link_to_tab[variant="secondary"][href="#jetzt_anmelden"]:hover {
    filter: brightness(0.95) !important;
  }
}

@-moz-document domain("joyclub.de"), domain("www.joyclub.de") {
/* --- FINAL OVERRIDE: ensure "Event gemerkt" with checkmark also gets the green inner border --- */


  j-button:has(.glyphicons-tick):has(.btn-text) {
    position: relative !important;
    border-radius: 8px !important;
  }
  j-button:has(.glyphicons-tick):has(.btn-text)::after {
    content: "" !important;
    position: absolute !important;
    inset: 0 !important;
    border: 4px solid #0f6d2f !important;
    border-radius: 8px !important;
    pointer-events: none !important;
    box-sizing: border-box !important;
  }
}
